-@products.each do |product|
	-if product.images.any?
		.col-md-3.col-sm-4
			.product
				.image
					=link_to product do
						-if product.previewpic.url && product.previewpic.thumb_medium.file.exists?
							=image_tag product.previewpic.url(:thumb_medium), class: 'img-responsive image1', alt: ''
						-else
							=image_tag product.images.first.image.url(:thumb_medium), class: 'img-responsive image1', alt: ''
				.text
					%h3
						=link_to product.title, product
					%p.price
						от
						-if product.basicprice
							=sprintf('%.2f', initialPrice(product.basicprice))
						-elsif product.options.first.price
							=sprintf('%.2f', initialPrice(product.options.first.price))
						-else
							="N/A"
						руб.