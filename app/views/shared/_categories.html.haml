-unless abstract_category.nil?
	.row.products
		-abstract_category.subcategories.each do |subcat|
			.col-md-3.col-sm-4
				.product
					.image
						=image_tag subcat.avatar.url, class: 'img img-responsive image1'
					.text
						%h3
							=link_to products_path(category: abstract_category.title, subcategory: subcat.title) do
								=subcat.title