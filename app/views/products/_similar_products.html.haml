.col-md-12.col-sm-12
  .box
    .center
      %h3 Дополняющие товары

-@product.accompanies.each do |accompany|
  .col-md-2.col-sm-3
    .product
      .image
        =link_to accompany do
          -if accompany.previewpic.url
            =image_tag accompany.previewpic.url(:thumb_medium), class: 'img-responsive image1', alt: ''
          -else
            =image_tag accompany.images.first.image.url(:thumb_medium), class: 'img-responsive image1', alt: ''
      .text
        %h3
          =accompany.title
        %p.price
          от
          -if accompany.basicprice
            =sprintf('%.2f', initialPrice(accompany.basicprice))
          -elsif accompany.options.first.price
            =sprintf('%.2f', initialPrice(accompany.options.first.price))
          -else
            ="N/A"
          руб.