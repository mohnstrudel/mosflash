#content
  .container
    .col-md-12
      %ul.breadcrumb
        %li
          =link_to 'Главная', root_path
        %li
          =link_to @product.category.title, root_path
        %li
          =link_to @product.subcategory.title, root_path
        %li
          = @product.title
      .box.text-center
        .row
          .col-sm-10.col-sm-offset-1
            %h1 
              =@product.title
            %p.text-muted
              =@product.advertising_text
            %p.goToDescription
              %a.scroll-to{:href => "#details"} Пролистните вниз, что бы узнать все детали товара
    /
      *** LEFT COLUMN ***
      _________________________________________________________
    .col-md-9
      #productMain.row
        .col-sm-6
          #mainImage
            =image_tag @product.images.first.image.to_s, class: 'img-responsive'
            / %img.img-responsive{:alt => "", :src => "img/detailbig1.jpg"}
          .ribbon.sale
            .theribbon SALE
            .ribbon-background
          / /.ribbon
          -if @product.created_at < 1.week.ago
            .ribbon.new
              .theribbon NEW
              .ribbon-background
          #thumbs.row
            -@product.images.each do |pic|
              .col-xs-4
                =link_to pic.image.to_s, class: 'thumb' do
                  =image_tag(pic.image.to_s, alt: "", class: 'img-responsive')
          / /.ribbon
        .col-sm-6
          .box
            %h3 Опции данного товара
            .sizes
              %label{for: 'size'}
                Выберите объем
              %br
              -@productSizes.each_with_index do |volume, index|
                -volume.each do |item|
                  =link_to "#", class: 'size_input' do
                    =sprintf('%.0f', item.value/1000.to_f)
                    Гб
                  %input#size_s.size-input{:name => "volume", :type => "radio", :value => (@getCurrency[index][0].to_f).ceil}
            .row
              .col-sm-6
                %label{for: 'color'}
                  Цвет
                %select.form-control#color
            .row
              .col-sm-6        
                %label{for: 'amount'}
                  Количество
                %input.form-control{:type => "number", value: 1, size: 5, id: 'amount'}
            .row
              .col-sm-9
                .form-group
                  %label{for: 'delivery'}
                    Доставка
                  %select.form-control#delivery
            .row
              .col-sm-12
                Цена:
                %p.price#priceValue
                  
                  =(@getCurrency[0][0].to_f).ceil
                руб.
            .row
              .col-sm-12
                %p.text-center
                  =link_to line_items_path(product_id: @product.id), method: :post, remote: true, id: 'add_item_to_cart', class: 'btn btn-primary shopping-cart-btn' do
                    %i.fa.fa-shopping-cart
                    Купить
                  %button.btn.btn-default{"data-placement" => "top", "data-toggle" => "tooltip", :title => "Add to wishlist", :type => "submit"}
                    %i.fa.fa-heart-o
                  =link_to edit_product_path(@product.id), class: 'btn btn-default' do
                    %i.fa.fa-pencil
          
            /   %a.thumb{:href => "img/detailbig1.jpg"}
            /     %img.img-responsive{:alt => "", :src => "img/detailsquare.jpg"}
            / .col-xs-4
            /   %a.thumb{:href => "img/detailbig2.jpg"}
            /     %img.img-responsive{:alt => "", :src => "img/detailsquare2.jpg"}
            / .col-xs-4
            /   %a.thumb{:href => "img/detailbig3.jpg"}
            /     %img.img-responsive{:alt => "", :src => "img/detailsquare3.jpg"}
      #details.box
        %p
          %h4 Описание продукта
          %p=@product.description
          %h4 Материал
          %ul
            -@product.options.each do |option|
              %li=option.material
          %h4 Размеры
          %ul
            -@product.options.each do |option|
              %li=option.size
          %blockquote
            %p
              %em
                =@product.fancy_quote
      #product-social.box.social
        %h4 Show it to your friends
        %p
          %a.external.facebook{"data-animate-hover" => "pulse", :href => "#"}
            %i.fa.fa-facebook
          %a.external.gplus{"data-animate-hover" => "pulse", :href => "#"}
            %i.fa.fa-google-plus
          %a.external.twitter{"data-animate-hover" => "pulse", :href => "#"}
            %i.fa.fa-twitter
          %a.email{"data-animate-hover" => "pulse", :href => "#"}
            %i.fa.fa-envelope
      .row
        =render 'similar_products'
      .row
        .col-md-3.col-sm-6
          .box
            %h3 Products viewed recently
        .col-md-3.col-sm-6
          .product
            .image
              %a{:href => "#"}
                / %img.img-responsive.image1{:alt => "", :src => "img/product3.jpg"}
            .text
              %h3 Fur coat
              %p.price $143
          / /.product
        .col-md-3.col-sm-6
          .product
            .image
              %a{:href => "#"}
                / %img.img-responsive.image1{:alt => "", :src => "img/product1.jpg"}
            .text
              %h3 Fur coat
              %p.price $143
          / /.product
        .col-md-3.col-sm-6
          .product
            .image
              %a{:href => "#"}
                / %img.img-responsive.image1{:alt => "", :src => "img/product2.jpg"}
            .text
              %h3 Fur coat
              %p.price $143
          / /.product
    / /.col-md-9
